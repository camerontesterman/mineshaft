#!/usr/bin/ruby

require "environment"
require "install"
require "optparse"
require "version"

options = {}

parser = OptionParser.new do |opts|
  opts.on_tail("-v", "displays the current version of ruby-venv") do 
    puts RubyVenv::VERSION[:name] + " " + RubyVenv::VERSION[:number]
    exit
  end
end

parser.parse!

